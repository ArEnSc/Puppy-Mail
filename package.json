    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "auth:gmail": "tsx src/scripts/getRefreshToken.ts",
    "test:email": "tsx src/scripts/testEmailFetch.ts",
    "test:workflow": "tsx src/workflow/standalone/run-workflow.ts",
    "test:workflow:json": "tsx src/workflow/standalone/run-workflow.ts src/workflow/examples/simple-test.json",
    "workflow:cli": "tsx src/workflow/standalone/workflow-cli.ts",
    "workflow:debug": "tsx src/workflow/debug/debug-runner.ts",
    "workflow:logs": "tsx src/workflow/test/test-with-all-logs.ts",
    "workflow:test": "tsx src/workflow/test/test-workflow-integration.ts",
    "workflow:prompt": "tsx src/workflow/test/test-llm-workflow-prompt.ts"
  },
